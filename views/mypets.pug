html
  head
    title
      | Animal Care
    link(rel='stylesheet', href='../static/index.css')
    script(src= './static/jquery.js')  
    script(src= './static/main.js') 
    meta(charset='utf-8')
  body
    header
      h1(align='center')
        | Animal Care
    main
      .navbar
        a(href='home') Profile
        a(href='mypets') My Pets
        .dropdown
          button.dropbtn
            | Animals
            i.fa.fa-caret-down
          .dropdown-content
            a(href='gatos') Cats
            a(href='perros') Dogs
            a(href='peces') Fish
        if user
          li(style='float:right')  
            a(href='/logout') Logout
        else
          li(style='float:right')
            a(href='/login') Login
          li(style='float:right')  
            a(href='/register') Register    
    br
    if user
      p= user.name
      br     
    ul.list-group
      each pets2 in pets
        li.limypets.list-group-item
          a(href="/pet/"+pets2._id)= pets2.name
    if user
      a(href="/anadir"): button.anadir Add New Pet
